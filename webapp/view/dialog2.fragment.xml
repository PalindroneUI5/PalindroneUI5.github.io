<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:s="sap.suite.ui.commons" xmlns:mvc="sap.ui.core.mvc">
	<Dialog title="Create workpackage">
		<content>
			<l:VerticalLayout width="100%">
				<VBox width="100%" direction="Column" justifyContent="Center" alignItems="Center" class="yearButtons">
					<l:HorizontalLayout xmlns:sap.ui.layout="sap.ui.layout">
						<VBox width="100%" direction="Row" alignItems="Center" class="yearButtons" justifyContent="Center" alignContent="Start">
							<Label text="New workpackage name: " labelFor="dialogInput2Id"/>
							<Input id="dialogInputId" required="true" width="60%" liveChange="onDialogInputLiveChange"/>
						</VBox>
					</l:HorizontalLayout>
					<Text /> 
				</VBox>
			</l:VerticalLayout>
		</content>
		<beginButton>
			<Button text="Add" press="onDialogAdd"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onDialogClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>